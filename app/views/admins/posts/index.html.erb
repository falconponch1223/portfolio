<p class="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <section class="customer-index">
        <h2>投稿一覧</h2>
      　<table class="table table-striped">
          <thead>
            <tr>
              <th>投稿者名　</th>
              <th>投稿店名　　　　</th>
              <th>会員登録日　</th>
            </tr>
          </thead>
          <tbody>
            <!-- customer each文挿入 -->
            <% @posts.each do |post| %>
              <tr>
                <td>
                  <%= link_to admins_user_path(post.user.id) do %>
                    <%= post.user.name %>
                  <% end %>
                </td>
                <td>
                  <%= link_to admins_post_path(post.id) do %>
                    <%= post.name %>
                  <% end %>
                </td>
                <td><%= post.created_at.strftime("%Y年%m月%d日%H時%M分") %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </section>
    </div>
  </div>
</div>
