<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-9">
      <h2>投稿一覧</h2>
      <div class="post-box">
        <div class="row">
          <div class="col-sm-11">
            <div class="row clear-fix">
              <% @posts.each do |post| %>
              <div class="col-xs-12 col-sm-4"><%= attachment_image_tag post, :image, :fill, 150, 150, class: "img profile-thumb", fallback: "no_image.jpg"%>
              </div>
              <div class="col-xs-12 col-sm-8" style="border-bottom:1px black solid; padding-bottom: 30px;">
                <h2><%= post.name %></h2>
                <p><%= post.genre %></p>
                <p><%= post.post_comments.count %>件のコメント</p>
                <p><i class="fa fa-heart" aria-hidden="true" style="color: red;"></i><%= post.favorites.count %> いいね</p>
                <%= link_to "詳細を見る" , users_post_path(post.id) %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

    