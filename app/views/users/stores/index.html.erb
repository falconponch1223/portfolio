<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-9">
      <h2>登録店一覧</h2>
      <div class="post-box">
        <div class="row">
          <div class="col-sm-11">
            <div class="row clear-fix">
              <% @stores.each do |store| %>
              <div class="col-xs-12 col-sm-4"><%= attachment_image_tag store, :image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
              </div>
              <div class="col-xs-12 col-sm-8">
                <h2><%= store.name %></h2>
                <%= link_to "詳細を見る" , users_store_path(store.id) %>
                <p><%= store.genre %></p>
                <p><%= store.mood %></p>
                <p><%= store.address %></p>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

    